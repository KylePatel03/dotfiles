# Home Cleanup
alias config='git --git-dir=$HOME/Programming/Git/dotfiles --work-tree=$HOME'
alias cp='cp -iv'
alias egrep='grep -E --color=auto'
alias gpg='gpg --homedir $GNUPGHOME'
alias grep='grep --color=auto'
alias incognito='unset HISTFILE ; export HISTSIZE=0 ; export SAVEHIST=0'
alias journalctl='journalctl -r'
alias ll='ls -lh --color=auto --group-directories-first'
alias lla='ls -lAh --color=auto --group-directories-first'
alias ls='ls -h --color=auto --group-directories-first'
alias mv='mv -iv'
alias nvidia-settings='nvidia-settings --config="$XDG_CONFIG_HOME/nvidia/.nvidia-settings-rc"'
alias rm='rm -iv'
alias sc='shellcheck'
alias sxiv='nsxiv'
alias vim='nvim'
alias wget='wget --hsts-file="$XDG_CACHE_HOME/.wget-hsts"'
